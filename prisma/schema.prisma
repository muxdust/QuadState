generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  properties Property[] @relation("UserProperties")
}

model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Property {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String
  description   String
  features      String[]
  price         String
  coverImage    String
  otherImages   String[]
  location      String
  propertyArea  String
  totalFloors   Int
  furnished     String
  builtYear     Int
  parkingAvailable  Boolean
  ownerName     String
  ownerEmail    String
  ownerPhone    Int
  views         Int  @default(0)
  likes         Int  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String   @db.ObjectId
  user      User     @relation("UserProperties", fields: [userId], references: [id])
}